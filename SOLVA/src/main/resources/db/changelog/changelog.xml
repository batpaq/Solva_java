<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Yernur">
        <createTable tableName="usert">
            <column name="id" type="NUMBER GENERATED BY DEFAULT AS IDENTITY">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR2(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR2(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP DEFAULT CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Yernur">
        <createTable tableName="currencies">
            <column name="id" type="NUMBER GENERATED BY DEFAULT AS IDENTITY">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="CHAR(3)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR2(50)">
                <constraints nullable="false"/>
            </column>
            <column name="exchange_rate" type="NUMBER(10, 4)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP DEFAULT CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="Yernur">
        <createTable tableName="transactions">
            <column name="id" type="NUMBER GENERATED BY DEFAULT AS IDENTITY">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="NUMBER">
                <constraints nullable="false" foreignKeyName="fk_transactions_users"
                             referencedTableName="usert" referencedColumnNames="id"/>
            </column>
            <column name="amount" type="NUMBER(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency_id" type="NUMBER">
                <constraints nullable="false" foreignKeyName="fk_transactions_currencies"
                             referencedTableName="currencies" referencedColumnNames="id"/>
            </column>
            <column name="transaction_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR2(255)"/>
            <column name="created_at" type="TIMESTAMP DEFAULT CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="Yernur">
        <createTable tableName="expense_limits">
            <column name="id" type="NUMBER GENERATED BY DEFAULT AS IDENTITY">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="NUMBER">
                <constraints nullable="false" foreignKeyName="fk_expense_limits_users"
                             referencedTableName="usert" referencedColumnNames="id"/>
            </column>
            <column name="limit_amount" type="NUMBER(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency_id" type="NUMBER">
                <constraints nullable="false" foreignKeyName="fk_expense_limits_currencies"
                             referencedTableName="currencies" referencedColumnNames="id"/>
            </column>
            <column name="period_start" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="period_end" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP DEFAULT CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
